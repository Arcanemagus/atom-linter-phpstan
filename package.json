{
    "name": "atom-linter-phpstan",
    "main": "./lib/main",
    "version": "0.0.0",
    "description": "Lint PHP on the fly, using phpstan",
    "keywords": [
        "lint",
        "linter",
        "phpstan",
        "php"
    ],
    "repository": "https://github.com/BradCrumb/atom-linter-phpstan",
    "bugs": {
        "url": "https://github.com/BradCrumb/atom-linter-phpstan/issues"
    },
    "license": "MIT",
    "engines": {
        "atom": ">=1.4.0 <2.0.0"
    },
    "package-deps": [
        "linter"
    ],
    "providedServices": {
        "linter": {
            "versions": {
                "1.0.0": "provideLinter"
            }
        }
    },
    "dependencies": {
        "atom-linter": "^10.0.0",
        "atom-package-deps": "^4.0.1"
    },
    "configSchema": {
        "executablePath": {
            "type": "string",
            "default": "phpstan",
            "description": "Enter the path to your phpstan executable.",
            "order": 1
        },
        "autoExecutableSearch": {
            "title": "Search for executables",
            "type": "boolean",
            "default": true,
            "description": "Automatically search for `vendor/bin/phpstan` executable. Overrides the executable defined above.",
            "order": 2
        },
        "level": {
            "type": "string",
            "default": "0",
            "description": "Level of rule options - the higher the stricter",
            "order": 3
        }
    }
}
